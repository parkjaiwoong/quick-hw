<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#80000000"
    android:padding="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:background="@android:color/white"
        android:padding="20dp"
        android:elevation="8dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="신규 배차 요청"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:gravity="center"
            android:layout_marginBottom="16dp" />

        <TextView
            android:id="@+id/overlay_origin_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="출발지"
            android:textSize="12sp"
            android:textColor="#757575" />
        <TextView
            android:id="@+id/overlay_origin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="-"
            android:textSize="15sp"
            android:textColor="@android:color/black"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/overlay_dest_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="도착지"
            android:textSize="12sp"
            android:textColor="#757575" />
        <TextView
            android:id="@+id/overlay_dest"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="-"
            android:textSize="15sp"
            android:textColor="@android:color/black"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/overlay_fee_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="요금"
            android:textSize="12sp"
            android:textColor="#757575" />
        <TextView
            android:id="@+id/overlay_fee"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="-"
            android:textSize="15sp"
            android:textColor="@android:color/black"
            android:layout_marginBottom="20dp" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="48dp">

            <SeekBar
                android:id="@+id/overlay_slide_accept"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:max="100"
                android:progress="0"
                android:progressDrawable="@drawable/overlay_slide_track"
                android:thumb="@drawable/overlay_slide_thumb" />

            <TextView
                android:id="@+id/overlay_slide_label"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="슬라이드하여 수락하기 →"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:clickable="false"
                android:focusable="false" />
        </FrameLayout>
    </LinearLayout>
</FrameLayout>
